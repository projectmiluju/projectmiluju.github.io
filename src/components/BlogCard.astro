---
interface Props {
  title: string;
  slug: string;
  date: Date;
  summary: string;
  category: string;
  tags?: string[];
}

const { title, slug, date, summary, category, tags = [] } = Astro.props;

const categoryLabels: Record<string, string> = {
  cs: 'CS Notes',
  book: 'Book Notes',
  troubleshooting: 'Troubleshooting',
};

const formattedDate = date.toLocaleDateString('ko-KR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="blog-card card-3d">
  <a href={`/blog/${slug}`} class="card-link">
    <div class="card-content">
      <div class="card-meta">
        <span class="category-badge" data-category={category}>
          {categoryLabels[category] || category}
        </span>
        <time datetime={date.toISOString()}>{formattedDate}</time>
      </div>

      <h3 class="card-title">{title}</h3>
      
      <p class="card-summary">{summary}</p>

      {tags.length > 0 && (
        <div class="card-tags">
          {tags.slice(0, 3).map((tag) => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )}
      
      <div class="card-footer">
        <span class="read-more">
          읽기
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </span>
      </div>
    </div>
  </a>
</article>

<style>
  .blog-card {
    background-color: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-card);
    transition: border-color var(--transition-base), box-shadow var(--transition-base);
  }

  .blog-card:hover {
    border-color: var(--color-accent);
    box-shadow: var(--shadow-card-hover);
  }

  .card-link {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
    padding: var(--space-6);
  }

  .card-content {
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .category-badge {
    font-size: var(--text-xs);
    font-weight: 600;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-md);
    background-color: var(--color-accent-light);
    color: var(--color-accent);
  }

  .category-badge[data-category="cs"] {
    background-color: #e0f2fe;
    color: #0369a1;
  }

  .category-badge[data-category="book"] {
    background-color: #fef3c7;
    color: #b45309;
  }

  .category-badge[data-category="troubleshooting"] {
    background-color: #fee2e2;
    color: #dc2626;
  }

  @media (prefers-color-scheme: dark) {
    :root:not([data-theme="light"]) .category-badge[data-category="cs"] {
      background-color: #0c4a6e;
      color: #7dd3fc;
    }

    :root:not([data-theme="light"]) .category-badge[data-category="book"] {
      background-color: #78350f;
      color: #fcd34d;
    }

    :root:not([data-theme="light"]) .category-badge[data-category="troubleshooting"] {
      background-color: #7f1d1d;
      color: #fca5a5;
    }
  }

  [data-theme="dark"] .category-badge[data-category="cs"] {
    background-color: #0c4a6e;
    color: #7dd3fc;
  }

  [data-theme="dark"] .category-badge[data-category="book"] {
    background-color: #78350f;
    color: #fcd34d;
  }

  [data-theme="dark"] .category-badge[data-category="troubleshooting"] {
    background-color: #7f1d1d;
    color: #fca5a5;
  }

  .card-meta time {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .card-title {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.4;
    margin: 0 0 var(--space-3) 0;
    transition: color var(--transition-fast);
  }

  .blog-card:hover .card-title {
    color: var(--color-accent);
  }

  .card-summary {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.7;
    margin-bottom: var(--space-4);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .tag {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    padding: var(--space-1) var(--space-2);
    background-color: var(--color-bg);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .blog-card:hover .tag {
    background-color: var(--color-accent-light);
    color: var(--color-accent);
  }

  .card-footer {
    margin-top: auto;
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-accent);
    transition: gap var(--transition-base);
  }

  .blog-card:hover .read-more {
    gap: var(--space-3);
  }

  .read-more svg {
    transition: transform var(--transition-base);
  }

  .blog-card:hover .read-more svg {
    transform: translateX(2px);
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .blog-card {
      border-radius: var(--radius-lg);
    }

    .card-link {
      padding: var(--space-5);
    }
  }
</style>

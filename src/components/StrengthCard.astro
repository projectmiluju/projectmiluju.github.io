---
interface Props {
  title: string;
  description: string;
  icon: 'shield' | 'zap' | 'cog';
  evidence?: string;
}

const { title, description, icon, evidence } = Astro.props;

const icons = {
  shield: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>`,
  zap: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>`,
  cog: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>`,
};
---

<div class="strength-card card-3d">
  <div class="card-inner">
    <div class="icon-wrapper" set:html={icons[icon]} />
    <h3 class="strength-title">{title}</h3>
    <p class="strength-desc">{description}</p>
    {evidence && (
      <p class="strength-evidence">{evidence}</p>
    )}
  </div>
  <div class="card-glow" aria-hidden="true"></div>
</div>

<style>
  .strength-card {
    position: relative;
    padding: var(--space-8) var(--space-6);
    background-color: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    text-align: center;
    box-shadow: var(--shadow-card);
    transition: border-color var(--transition-base), box-shadow var(--transition-base);
    overflow: hidden;
  }

  .strength-card:hover {
    border-color: var(--color-accent);
    box-shadow: var(--shadow-card-hover);
  }

  .card-inner {
    position: relative;
    z-index: 1;
  }

  .card-glow {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 100px;
    background: radial-gradient(circle, var(--color-accent-glow) 0%, transparent 70%);
    opacity: 0;
    transition: opacity var(--transition-base);
    pointer-events: none;
  }

  .strength-card:hover .card-glow {
    opacity: 1;
  }

  .icon-wrapper {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background-color: var(--color-accent-light);
    color: var(--color-accent);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-5);
    transition: transform var(--transition-base), background-color var(--transition-base);
  }

  .strength-card:hover .icon-wrapper {
    transform: scale(1.05);
    background-color: var(--color-accent);
    color: white;
  }

  .strength-title {
    font-size: var(--text-xl);
    font-weight: 600;
    margin-bottom: var(--space-3);
    color: var(--color-text);
  }

  .strength-desc {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0;
  }

  .strength-evidence {
    font-size: var(--text-xs);
    color: var(--color-accent);
    margin-top: var(--space-3);
    padding-top: var(--space-3);
    border-top: 1px solid var(--color-border);
    font-style: italic;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .strength-card {
      padding: var(--space-6);
      border-radius: var(--radius-lg);
    }

    .icon-wrapper {
      width: 48px;
      height: 48px;
    }

    .strength-title {
      font-size: var(--text-lg);
    }
  }
</style>
